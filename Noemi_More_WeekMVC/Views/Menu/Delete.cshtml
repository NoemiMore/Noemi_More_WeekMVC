@model MenuViewModel
<form method="post">
    <p>Sei sicuro di voler eliminare il corso @Model.IdMenu - @Model.Nome ?</p>

    <div class="form-group">
        <label asp-for="IdMenu"></label>
        <input asp-for="IdMenu" class="form-control" readonly />
        <span asp-validation-for="IdMenu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    

    <input type="submit" value="Conferma eliminazione" class="tbn btn-danger" />
    <a class="btn btn-primary" asp-controller="Menu" asp-action="Index" role="button">Annulla</a>
</form>
